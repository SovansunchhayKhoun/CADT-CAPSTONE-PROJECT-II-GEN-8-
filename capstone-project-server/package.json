{
  "name": "capstone-project-server",
  "version": "0.0.1",
  "description": "This is Team 7 Capstone Project API",
  "author": "Capstone Project Team 7",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "drop:db": "node scripts/drop-db.cjs",
    "seed": "node scripts/seed-db.cjs",
    "copy:env:dev": "env-cmd -f env/development.env node scripts/write-env.cjs",
    "copy:env:staging": "env-cmd -f env/staging.env node scripts/write-env.cjs",
    "copy:env:prod": "env-cmd -f env/production.env node scripts/write-env.cjs",
    "build:dev": "yarn copy:env:dev && nest build",
    "build:staging": "yarn copy:env:staging && nest build",
    "build:prod": "yarn copy:env:prod && nest build",
    "start:dev": "yarn copy:env:dev && nest start --watch",
    "start:staging": "yarn copy:env:staging && nest start --watch",
    "start:prod": "yarn copy:env:prod && nest start --watch",
    "preview:dev": "yarn build:dev && node dist/main",
    "preview:staging": "yarn build:staging && node dist/main",
    "preview:prod": "yarn build:prod && node dist/main",
    "start:dev:fresh": "yarn drop:db && yarn start:dev",
    "gen:module": "nest g resource",
    "start:debug": "nest start --debug --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.3.8",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/websockets": "^10.3.8",
    "argon2": "^0.40.3",
    "axios": "^1.7.3",
    "dayjs": "^1.11.12",
    "env-cmd": "^10.1.0",
    "mongoose": "^8.3.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "stripe": "^16.6.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
